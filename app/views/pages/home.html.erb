<% if current_user %>
  <h4 class="text-secondary pt-5">Welcome <%= current_user.email %></h4>
  <div class="d-flex justify-content-center align-items-center text-center mt-5 pt-5">
    <div>
      <%= button_to "Start a new analysis", new_analysis_path, class: 'btn btn-outline-info btn-lg', method: 'get' %>
      <!-- <button type="button" class="btn btn-outline-info btn-lg">Start a new analysis</button> -->
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center align-items-center text-center mt-5 pt-5">
    <div>
      <%= button_to "Sign up for starting a new analysis", new_user_registration_path, class: 'btn btn-outline-info btn-lg', method: 'get' %>
    </div>
  </div>
<% end %>
